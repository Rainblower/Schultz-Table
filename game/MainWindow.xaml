<Window x:Class="game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:game"
        mc:Ignorable="d"
        Title="Schultz Table" Height="450" Width="400" MinWidth="380" MinHeight="450" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5" Name="txt" FontSize="24" FontWeight="Bold"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <WrapPanel Name="wrap" Width="255" Height="255"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" >
            <TextBlock Name="txtTime" HorizontalAlignment="Center" Text="Sec: 0"/>
            <Button Content="Restart" Margin="5" Width="100" Name="btnRestart" Click="btnRestart_Click"/>
        </StackPanel>
    </Grid>
</Window>
